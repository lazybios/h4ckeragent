<div class="wrapper clearfix">
<div class="tips">
    <p>这是个提醒</p>
</div>
<div class="left">
    <ul>
        <li><%= link_to "查看简历", :resumes %></li>
        <li><%= link_to "创建简历", :new_resume %></li>
        <li><%= link_to "创建PASSCODE", :new_access %></li>
        <li><%= link_to "PASSCODE列表", :accesses %></li>
        <li><a href="">访问统计</a></li>
    </ul>
</div>
<div class="right">
    <h2>注册</h2>
    <div class="right-content">
        <%= form_tag '/bind_wechat'  do |f| %>
            <p>WeChat二维码地址</p>
            <p>
                <%= text_field_tag :wechat %>
            </p>
            <p>Slack WebHook地址</p>
            <p>
                <%= text_field_tag :slack_webhook %>
            </p>
            <p>Slack Channel</p>
            <p>
                <%= text_field_tag :slack_channel %>
            </p>
            <p>
                <%= submit_tag "设置" %>
            </p>
        <% end %>
    </div>
</div>
</div>
